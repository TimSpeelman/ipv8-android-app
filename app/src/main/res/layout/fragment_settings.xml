<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Switch
            android:id="@+id/money_switch_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Money switch enabled"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/money_switch_toggle"/>

    </RelativeLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_toggle_accounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="8dp"
        android:paddingEnd="@dimen/fancy_button_horizontal_padding"
        android:paddingStart="@dimen/fancy_button_horizontal_padding"
        android:paddingTop="8dp"
        fancy:fb_borderColor="@color/orange"
        fancy:fb_borderWidth="2dp"
        fancy:fb_defaultColor="@color/transparent"
        fancy:fb_radius="30dp"
        fancy:fb_text="Manage bank accounts for switching"
        fancy:fb_textColor="@color/orange" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/red"
        android:text="@string/switch_explanation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/tx_fee_input"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:layout_marginTop="4dp"
            android:text="Transaction fee"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/tx_fee_explanation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <Switch
            android:id="@+id/debug_mode_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Debug mode"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/debug_mode_toggle"/>

    </RelativeLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_save_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="8dp"
        android:paddingEnd="@dimen/fancy_button_horizontal_padding"
        android:paddingStart="@dimen/fancy_button_horizontal_padding"
        android:paddingTop="8dp"
        fancy:fb_borderColor="@color/orange"
        fancy:fb_borderWidth="2dp"
        fancy:fb_defaultColor="@color/transparent"
        fancy:fb_radius="30dp"
        fancy:fb_text="Save settings"
        fancy:fb_textColor="@color/orange" />

</LinearLayout>